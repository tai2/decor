{
  "tasks": {
    "build_assets": "deno run --allow-read --allow-write src/build_assets.ts",
    "update_cache": "deno cache --lock-write src/*.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env"
  },
  "test": {
    "include": [
      "src/*_test.ts"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "exclude": [
      "**/*.md",
      "src/assets.json"
    ]
  }
}
