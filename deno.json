{
  "tasks": {
    "start": "deno run --allow-net src/main.ts",
    "build_assets": "deno run --allow-read --allow-write src/build_assets.ts",
    "update_cache": "deno cache --lock-write src/*.ts",
    "test": "deno test --allow-read --allow-write --allow-run"
  },
  "test": {
    "include": [
      "src/*_test.ts"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "exclude": [
      "**/*.md"
    ]
  }
}
